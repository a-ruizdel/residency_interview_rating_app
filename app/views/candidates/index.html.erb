<%= search_form_for @q do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :block_eq, "AM or PM block?" %>
    <%= f.text_field :block_eq, :class => "form-control", :placeholder => "Enter AM or PM in CAPITAL LETTERS" %>
  </div>

   <div class="form-group">
    <%= f.label :interview_on_eq, "Which interview date 2015-12-16 or 2015-12-17?" %>
    <%= f.select interview_on_eq, @lang %>
    <%#= f.text_field :interview_on_eq, :class => "form-control", :placeholder => "Enter 2015-12-16 or 2015-12-17" %>
  </div>



  <!-- <div class="form-group">
    <%#= f.label :year_lteq, "Released before" %>
    <%#= f.text_field :year_lteq, :class => "form-control", :placeholder => "Year less than or equal to" %>
  </div> -->

  <%= f.submit :class => "btn btn-primary btn-block" %>

  <a href="/candidates" class="btn btn-default btn-block">Clear filters</a>
<% end %>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>Photo</th>
        <th>Candidate's Name</th>
        <th>Block AM or PM</th>
        <th>Interview Date</th>
        <th>Hometown</th>
        <th>School</th>
        <th>Additional degree</th>
        <th>Usmle 1</th>
        <th>Usmle 2</th>
        <th>Aoa</th>
        <th>Actions</th>
      </tr>

      <% @candidates.each do |candidate| %>
      <tr>

        <td><img src="<%= candidate.photo %>" width="50"</td>
        <td><%= candidate.candidate_lastname %></td>
        <td><%= candidate.block %></td>
        <td><%= candidate.interview_on %></td>
        <td><%= candidate.hometown %></td>
        <td><%= candidate.school %></td>
        <td><%= candidate.add_degree %></td>
        <td><%= candidate.usmle_1 %></td>
        <td><%= candidate.usmle_2 %></td>
        <td><%= candidate.aoa %></td>
        <td>
          <a href="/candidates/<%= candidate.id %>" class="btn btn-primary">Show</a>
          <a href="/candidates/<%= candidate.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_candidate/<%= candidate.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
