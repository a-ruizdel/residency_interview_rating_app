<div class="page-header">
  <h1>
    Ratings
    <a href="/ratings/new" class="btn btn-lg btn-success">New Rating</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Candidate</th>
        <th>Overall comment</th>
        <th>Q4</th>
        <th>Q3</th>
        <th>Q2</th>
        <th>Q1</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.candidate_id %></td>
        <td><%= rating.overall_comment %></td>
        <td><%= rating.q4 %></td>
        <td><%= rating.q3 %></td>
        <td><%= rating.q2 %></td>
        <td><%= rating.q1 %></td>
        <td><%= rating.user_id %></td>
        <td>
          <a href="/ratings/<%= rating.id %>" class="btn btn-primary">Show</a>
          <a href="/ratings/<%= rating.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_rating/<%= rating.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
