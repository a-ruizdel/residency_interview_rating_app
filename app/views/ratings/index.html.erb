<div class="page-header">
  <h1>
    Ratings
    <a href="/ratings/new" class="btn btn-lg btn-success">New Rating</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th></th>
        <th>Candidate's Name</th>
        <th>Q1</th>
        <th>Q2</th>
        <th>Q3</th>
        <th>Q4</th>
        <th>Overall comment</th>
        <th>Total</th>
        <th>Average</th>
        <th>Actions</th>
      </tr>

      <% @ratings_current.each do |rating| %>
      <% @total_rating = rating.q1 + rating.q2 + rating.q3 + rating.q4 %>
      <% @average_rating = @total_rating/4 %>
      <tr>
        <td><img src="<%= rating.candidate.photo %>" width="50"</td>
        <td><%= rating.candidate.candidate_lastname %></td>
        <td><%= rating.q1 %></td>
        <td><%= rating.q2 %></td>
        <td><%= rating.q3 %></td>
        <td><%= rating.q4 %></td>
        <td><%= rating.overall_comment %></td>
        <td><%= @total_rating %></td>
        <td><%= @average_rating %></td>


        <td>
          <a href="/ratings/<%= rating.id %>" class="btn btn-primary">Show</a>
          <a href="/ratings/<%= rating.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_rating/<%= rating.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
